<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane stylesheets="/push_man/game/game.css, /push_man/main/font.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="push_man.game.GameController">
   <bottom>
      <HBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Button fx:id="btnPrev" mnemonicParsing="false" text="PREV" />
            <Button fx:id="btnNext" mnemonicParsing="false" text="NEXT" />
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label fx:id="lblTime" text="00:00:00" />
                  <Button fx:id="btnStart" mnemonicParsing="true" text="_START" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <Button fx:id="btnExit" mnemonicParsing="false" text="나가기" />
         </children>
      </HBox>
   </bottom>
   <top>
      <Canvas fx:id="canvas" height="200.0" width="200.0" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <Separator prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
