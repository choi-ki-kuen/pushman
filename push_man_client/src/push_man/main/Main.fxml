<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" styleClass="mainRoot" stylesheets="/push_man/main/main.css, /push_man/main/font.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label styleClass="loading" text="Loading...">
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
      </Label>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="/resources/system_image/loading.gif" />
         </image>
      </ImageView>
      <Separator prefWidth="200.0" />
      <Label text="Server IP  등록">
         <VBox.margin>
            <Insets top="2.0" />
         </VBox.margin>
      </Label>
      <HBox spacing="2.0">
         <children>
            <TextField fx:id="btnIP" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnConn" mnemonicParsing="false" text="연결" />
         </children>
         <padding>
            <Insets bottom="2.0" left="2.0" right="2.0" top="5.0" />
         </padding>
      </HBox>
   </children>
</VBox>
